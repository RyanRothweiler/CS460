
@{
    ViewBag.Title = "PageOne";
}

<h2>Table Builder</h2>

<form method="post">
    <h4>Rows</h4>
    <input type="number" name="Rows" value="10" />
    <h4>Columns</h4>
    <input type="number" name="Columns" value="10" />
    <input type="submit" name="Build" value="Submit" />
</form>

<div class="row">
    <div class="col-md-6">
        <table class="table table-striped">
            @for (int row = 0; row < ViewBag.Rows; row++)
            {
                <tr>
                    @for (int col = 0; col < ViewBag.Columns; col++)
                    {                
                       <td>Entry</td>
                    }
                </tr>
            }
        </table>
    </div>
</div>