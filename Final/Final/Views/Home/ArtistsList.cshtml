@model IEnumerable<Final.Models.Artist>

@{
    ViewBag.Title = "ArtistsList";
}

<h2>ArtistsList</h2>

<p>
    @Html.ActionLink("Create New", "ArtistCreate", "Home")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "ArtistEdit", new { id=item.ID }) |
            @Html.ActionLink("Details", "ArtistDetails", new { id=item.ID }) |
            @Html.ActionLink("Delete", "ArtistDelete", new { id=item.ID })
        </td>
    </tr>
}

</table>
