
@{
    ViewBag.Title = "PageThree";
}

<h2>Loan Calculator</h2>

@if (ViewBag.Valid != null)
{
    if (ViewBag.Valid)
    {
        <h1>Calculated Payment : @ViewBag.Payment</h1>
    }
    else
    {
        <h1>Please enter all the information correctly. Must include all fields and must only input numbers.</h1>
    }
}


<form method="post">
    <h4>Loan Amount</h4>
    <input type="number" name="LoanAmount" value="LoanAmount" />

    <h4>Interest Rate</h4>
    <input type="number" name="InterestRate" value="InterestRate" />

    <h4>Term Length</h4>
    <input type="number" name="TermLength" value="TermLength" />
    <input type="submit" name="Calculate" value="calculate" />
</form>

